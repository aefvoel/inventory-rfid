<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.toriq.project">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_rfid_red"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:screenOrientation="portrait"
            android:name="id.toriq.project.ui.loginActivity.LoginActivity"
            android:theme="@style/AppTheme.Launcher"
            android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="id.toriq.project.ui.mainActivity.DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="false"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="id.toriq.project.ui.mainActivity.MainActivity"
            android:label="Pengumuman dan Informasi"
            android:noHistory="false"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="id.toriq.project.ui.scanActivity.ScanActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="id.toriq.project.ui.scanActivity.RegActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="id.toriq.project.ui.productActivity.ProductActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="id.toriq.project.ui.historyActivity.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
